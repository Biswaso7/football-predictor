{
  "model_training": {
    "test_size": 0.2,
    "cross_validation_folds": 5,
    "random_state": 42,
    "n_jobs": -1,
    "verbose": 1
  },
  "hyperparameter_optimization": {
    "n_trials": 100,
    "timeout": 3600,
    "n_jobs": 4,
    "sampler": "TPESampler"
  },
  "feature_selection": {
    "k_best": 50,
    "score_func": "f_classif",
    "enable_selection": false
  },
  "model_validation": {
    "metrics": [
      "accuracy",
      "precision",
      "recall",
      "f1",
      "roc_auc"
    ],
    "threshold_tuning": true,
    "calibration": true
  },
  "ensemble_methods": {
    "enable_voting": true,
    "enable_stacking": true,
    "enable_blending": true
  }
}